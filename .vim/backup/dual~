#!/bin/sh

hdmi_left_laptop() {
    xrandr --auto --output eDP1 --mode 1920x1080 --right-of HDMI1
}
laptop_right_hdmi() {
    xrandr --auto --output eDP1 --mode 1920x1080 --right-of HDMI1
}
while getopts lr SIDE; do
    case $SIDE in
        r)
            echo "Setting main to be on right..."
            hdmi_left_laptop
            exit
            ;;
        l)
            echo "Setting main to be on left..."
            laptop_right_hdmi
            exit
            ;;
    esac
done
echo "Must set either -r or -l flag"
