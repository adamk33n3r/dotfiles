function disp {
  local lvdsx lvdsy monx mony
  local lvdsoffsetx lvdsoffsety lvdsoffset monoffset tilx tily
  local output other command

  lvdsx=1920
  lvdsy=1080

  monx=1920
  mony=1080

  #pkill tilda
  tilx=0
  tily=0

  case "${1-mon}" in

  none)
    xrandr --output eDP1 --primary --output VGA1 --off --output HDMI1 --off
    ;;

  proj)
    xrandr --output eDP1 --primary --output HDMI1 --mode 1920x1080 --right-of eDP1
    ;;

  mon)
    if [ "`xrandr | grep 'HDMI1 connected'`" ]
    then
      output="HDMI1"
    elif [ "`xrandr | grep 'VGA1 connected'`" ]
    then
      output="VGA1"
    else
      output='none'
    fi
    echo "output = $output"
    if [ "$output" = 'none' ]
    then
      echo "no monitor detected"
      xrandr --output eDP1 --primary --output VGA1 --off --output HDMI1 --off
    else
      if [ "$output" = "HDMI1" ]
      then
        other="VGA1"
      else
        other="HDMI1"
      fi
      xrandr --output $other --off

      if [ $2 -a $2 = "right" ]
      then
        lvdsoffsetx="0"
        lvdsoffsety="230"
        monoffset=$lvdsx"x0"
      else
        lvdsoffsetx=$monx
        lvdsoffsety="230"
        monoffset=0x0
      fi
      lvdsoffset=$lvdsoffsetx"x"$lvdsoffsety
      tilx=$lvdsoffsetx
      tily=$lvdsoffsety
      command="xrandr --output eDP1 --primary --mode "$lvdsx"x"$lvdsy" --pos $lvdsoffset --output $output --mode "$monx"x"$mony" --pos $monoffset"
      #echo "$command"
      $command
      #xrandr --output eDP1 --primary --pos $lvdsoffset --output $output --pos $monoffset
    fi
    ;;

  esac
}
